{% assign latestArticle = blogs.news.articles | last %}
{% assign latestProduct = collections.all.products | last %}

<div id="carouselExampleCaptions" class="carousel slide mt-5 mb-5" data-bs-ride="carousel" style="width: 100%; height: 60vh; overflow: hidden;">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active" style="height: 60vh">
      <img src="https://www.pixelstalk.net/wp-content/uploads/2016/04/Desktop-Mountain-Wallpaper-HD-1920x1080.jpg" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5 class="text-danger">Campaign</h5>
        <p>Some representative placeholder content for the first slide.</p>
      </div>
    </div>
    <div class="carousel-item" style="height: 60vh">
      <a href="{{ latestProduct.url }}" target="_blank">
        <img src="{{ latestProduct.featured_image.src | image_url: width: 2000 }}" alt="{{ latestProduct.featured_image.alt }}" style="width: 100%">
        <div class="carousel-caption d-none d-md-block">
          <h5 class="text-primary">New Products</h5>
          <p>{{ latestProduct.title }}</p>
        </div>
      </a>
    </div>
    <div class="carousel-item" style="height: 60vh">
      <a href="{{ latestArticle.url }}" target="_blank">
        <img src="{{ latestArticle.image.src | image_url: width: 2000}}" alt="{{ latestArticle.image.alt }}" style="width: 100%">
        <div class="carousel-caption d-none d-md-block">
          <h5 class="text-success">News</h5>
          <p>{{ latestArticle.title }}</p>
        </div>
      </a>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
